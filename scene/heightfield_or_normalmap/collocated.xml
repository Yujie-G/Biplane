<?xml version='1.0' encoding='utf-8'?>

<scene version="0.6.0">

	<integrator type="volpath"/>

    <sensor type="perspective">
        <float name="nearClip" value="0.1"/>
        <float name="farClip" value="100"/>
        <float name="fov" value="90"/>

        <transform name="toWorld">
            <lookat origin="$x, $y, $z" up="0, 1, 0" target="0, 0, 0"/>
        </transform>

        <sampler type="independent">
            <integer name="sampleCount" value="16"/>
        </sampler>

        <film type="hdrfilm">
            <boolean name="banner" value="false"/>
            <integer name="height" value="1600"/>
            <integer name="width" value="1600"/>
            <rfilter type="gaussian"/>
        </film>
    </sensor>

	<emitter type="point">
        <transform name="toWorld">
            <translate x="$x" y="$y" z="$z"/>
        </transform>
        <spectrum name="intensity" value="3000"/>
    </emitter>
	
	<shape type="heightfield">
		<transform name="toWorld">
			<scale x="5" y="5" z="1"/>
			<rotate x="1" angle="180"/>
			<translate x="0" y="0" z="0.00001"/>
		</transform>
		

        <bsdf type="roughdiffuse">
            <texture name="alpha" type="bitmap">
                <string name="filename" value="$roughness_path"/>
                <string name="filterType" value="bilinear"/>
            </texture>
            <string name="distribution" value="ggx"/>
            <texture name="reflectance" type="bitmap">
                <string name="filename" value="$basecolor_path"/>
                <string name="filterType" value="bilinear"/>
                <float name="gamma" value="2.2"/>
            </texture>
        </bsdf>
		
		<texture type="bitmap" id="displacement">
			<!-- <string name="filename" value="/test/repositories/mitsuba-pytorch-tensorNLB/mitsuba0.6-tensorNLB/scene/neumip_materials/carpet_braided_binds_pattern_glossiness.png"/> -->
			<string name="filename" value="$height_path"/>
			<string name="filterType" value="bilinear"/>
			<float name="gamma" value="2.2"/>
		</texture>
		<float name="scale" value="$scale"/>
	</shape>
	
	<shape type="rectangle" id="ref_plane">
		<transform name="toWorld">
			<rotate x="1" angle="180"/>
            
			<scale x="10" y="10" z="0.1"/>
		</transform>
		<bsdf type="mask">
			<bsdf type="diffuse"/>
			<texture name="opacity" type="bitmap">
				<string name="filename" value="/root/heightfield_or_normalmap/calib.png"/>
				<string name="channel" value="r"/>
			</texture>
		</bsdf>
	</shape>

</scene>
